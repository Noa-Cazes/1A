package Unlock;

public class Chrono {
	
	private long TempsDepart=0;
	private long TempsFin=0;
	private long PauseDepart=0;
	private long PauseFin=0;
	private long Duree=0;
	
	public void start () {
		TempsDepart=System.currentTimeMillis();
		TempsFin=0;
		PauseDepart=0;
		PauseFin=0;
		Duree=0;
	}

	public void pause () {
		PauseDepart=System.currentTimeMillis();
	}
	
	public void resume () {
		PauseFin=TempsDepart+PauseFin-PauseDepart;
		TempsFin=0;
		PauseDepart=0;
		PauseFin=0;
		Duree=0;
	}
	
	public void stop () {
		TempsFin=System.currentTimeMillis();
		Duree=(TempsFin-TempsDepart)-(PauseFin-PauseDepart);
		TempsDepart=0;
		TempsFin=0;
		PauseDepart=0;
		PauseFin=0;
	}
	
	public static String TimeToHMS(long TempsS) {
		int h=(int) (TempsS/3600);
		int m=(int) ((TempsS%3600)/60);
		int s=(int) (TempsS%60);
		String r="";
		if(h>0) {
			r+=h+" h ";
		}
		if(m>0) {
			r+=m+" min";
		}
		if(s>0) {
			r+=s+" s";
		}
		if(h<=0 && m<=0 && s<=0) {
			r=" 0 s";
		}
		return r;
	}
	
	public long GetDureeS() {
		return Duree/1000;
	}
	
	public long GetDureeMs() {
		return Duree;
	}
	
	public String GetDureeTxt() {
		return TimeToHMS(GetDureeS());
	}
	
	public static void main(String[] args) {
		Chrono chrono = new Chrono();
		chrono.start();
	    chrono.pause();
		int i=0;
		int j=0;
		int p=0;
		while(i<1000000000) {
			i++;
			while(j<100000000) {
			j++;
			while(p<100000000) {
				p++;
			}
			}
		}

		int a=0;
		int b=0;
		int c=0;
		while(a<1000000000) {
			a++;
			while(b<100000000) {
			b++;
			while(c<100000000) {
				c++;
			}
			}
		}
	    chrono.resume();
	    int d=0;
	    int e=0;
	    int f=0;
		while(d<1000000000) {
			d++;
			while(e<100000000) {
			e++;
			while(f<100000000) {
				f++;
			}
			}
		}
	   // chrono.stop();
		System.out.println(chrono.GetDureeMs());
		System.out.println(chrono.TimeToHMS(chrono.GetDureeS()));
	}
}
