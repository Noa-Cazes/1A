package Unlock;
/**
 * Machine qui permet d'obtenir des cartes .
 * @author ipeltier
 *
 */
public class CarteMachine implements Carte {
	 
	/** Numéro de la carte. */
	private int numCarte;
	/** Information la découverte de la carte. */
	private boolean decouvCarte;
	/** Image correspondant à la carte */
	private String imgcarte;

    /** Construction de la carte machine.
     * @param le numéro de la carte
     */
	CarteMachine(int n, String image_carte) {
        assert n >= 1;
		assert n <= 100;
		this.numCarte = n;
		this.decouvCarte = false;
		this.imgcarte = imgcarte;
    }

    /** Obtenir le numéro de la carte.
     * @return  le numéro de la carte
	 */
	public int getNumero() {
		return numCarte;
			
	}
	
	/** Obtenir le nom du fichier correspond à l'image de la carte
	 * @return un string comportant le nom du fichier
	*/
	public String getFichier() {
		return this.imgcarte;		
	}
		
	/** Informer si la carte a été découverte.
     * @return un boolean informant si la carte a été découverte.
	 */
	public boolean estDecouverte() {
		return decouvCarte;
	}

    /** Découvrir la carte.
     * @param le numéro de la carte.
	 */
	public void decouvrir() { //add
		this.decouvCarte = true;
	}
}
