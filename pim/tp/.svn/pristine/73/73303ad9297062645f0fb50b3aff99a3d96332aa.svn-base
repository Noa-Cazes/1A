with Ensembles_Tableau;
with Ada.Text_IO; use Ada.Text_IO;
with Ada.Integer_Text_IO; use Ada.Integer_Text_IO;

procedure Test_Ensembles_Sujet_Tableau is


        -- Instancier le paquetage Ensembles_Tableau pour avoir un Ensemble
        -- d'entiers de capacité 10
        package Mon_Ensemble is new Ensembles_Tableau(Capacite => 10, T_Elts => Integer);
        use Mon_Ensemble;
        Ensemble : T_Ensemble;


	-- Définir une opération Afficher qui affiche les éléments d'un ensemble
	-- d'entier en s'appuyant sur Appliquer_Sur_Tous.  L'ensemble {5, 28, 10}
	-- sera affiché :
	--           5         28         10

	Ens1 : T_Ensemble;

begin
        -- Créer un ensemble vide Ens1
        Initialiser (Ens1);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Ajouter 5 dans Ens1
        Ajouter(Ens1,5,1);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
        -- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide(Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);

        -- Ajouter 28 puis 10 dans Ens1
        Ajouter(Ens1,28,2);
        Ajouter(Ens1,10,3);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Ajouter 7 dans Ens1
        Ajouter(Ens1,7,4);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Supprimer 10 en Ens1
        Supprimer(Ens,10);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Supprimer 7 en Ens1
        Supprimer(Ens,7);
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Supprimer 5 en Ens1
        Supprimer(Ens,5);
	-- Afficher l'ensemble
	Afficher (Ens1);
	New_Line;
	-- Vérifier si vide ou non, sa taille, la présence ou pas de 2, 5, 7, 10
        Est_Vide (Ens1);
        Ens1.Taille;
        Present(Ens1,2);
        Present(Ens1,5);
        Present(Ens1,7);
        Present(Ens1,10);
        -- Détruire l'ensemble
        Detruire(Ens1);

end Test_Ensembles_Sujet_Tableau;
